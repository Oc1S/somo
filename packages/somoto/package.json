{
  "name": "somoto",
  "version": "0.0.2",
  "description": "SolidJS Motion Toast",
  "license": "MIT",
  "author": "Oc1s",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/oc1s/somo.git"
  },
  "homepage": "https://github.com/oc1s/somo#readme",
  "bugs": {
    "url": "https://github.com/oc1s/somo/issues"
  },
  "files": [
    "dist"
  ],
  "private": false,
  "sideEffects": true,
  "type": "module",
  "main": "./dist/server.cjs",
  "module": "./dist/server.js",
  "types": "./dist/index.d.ts",
  "browser": {
    "./dist/server.js": "./dist/index.js",
    "./dist/server.cjs": "./dist/index.cjs"
  },
  "exports": {
    "worker": {
      "import": {
        "types": "./dist/index.d.ts",
        "default": "./dist/server.js"
      },
      "require": {
        "types": "./dist/index.d.cts",
        "default": "./dist/server.cjs"
      }
    },
    "browser": {
      "development": {
        "import": {
          "types": "./dist/index.d.ts",
          "default": "./dist/dev.js"
        },
        "require": {
          "types": "./dist/index.d.cts",
          "default": "./dist/dev.cjs"
        }
      },
      "import": {
        "types": "./dist/index.d.ts",
        "default": "./dist/index.js"
      },
      "require": {
        "types": "./dist/index.d.cts",
        "default": "./dist/index.cjs"
      }
    },
    "deno": {
      "import": {
        "types": "./dist/index.d.ts",
        "default": "./dist/server.js"
      },
      "require": {
        "types": "./dist/index.d.cts",
        "default": "./dist/server.cjs"
      }
    },
    "node": {
      "import": {
        "types": "./dist/index.d.ts",
        "default": "./dist/server.js"
      },
      "require": {
        "types": "./dist/index.d.cts",
        "default": "./dist/server.cjs"
      }
    },
    "development": {
      "import": {
        "types": "./dist/index.d.ts",
        "default": "./dist/dev.js"
      },
      "require": {
        "types": "./dist/index.d.cts",
        "default": "./dist/dev.cjs"
      }
    },
    "import": {
      "types": "./dist/index.d.ts",
      "default": "./dist/index.js"
    },
    "require": {
      "types": "./dist/index.d.cts",
      "default": "./dist/index.cjs"
    }
  },
  "typesVersions": {},
  "scripts": {
    "dev": "tsup --watch",
    "build": "tsup",
    "test": "concurrently pnpm:test:*",
    "test:client": "vitest",
    "test:ssr": "vitest --mode ssr",
    "prepublishOnly": "npm run build",
    "format": "prettier --ignore-path .gitignore -w \"src/**/*.{js,ts,json,css,tsx,jsx}\" \"docs/**/*.{js,ts,json,css,tsx,jsx}\"",
    "lint": "concurrently pnpm:lint:*",
    "lint:code": "eslint --ignore-path .gitignore --max-warnings 0 src/**/*.{js,ts,tsx,jsx}",
    "lint:types": "tsc --noEmit",
    "update-deps": "pnpm up -Li"
  },
  "devDependencies": {
    "@types/node": "^22.7.4",
    "esbuild": "^0.21.3",
    "esbuild-plugin-solid": "^0.6.0",
    "jsdom": "^24.0.0",
    "solid-js": "^1.9.1",
    "tsup": "^8.0.2",
    "tsup-preset-solid": "^2.2.0",
    "typescript": "^5.4.5",
    "vite": "^5.2.11",
    "vite-plugin-solid": "^2.10.2",
    "vitest": "^1.6.0"
  },
  "peerDependencies": {
    "solid-js": ">=1.6.0"
  },
  "keywords": [
    "solid",
    "hooks",
    "notifications",
    "toast",
    "snackbar",
    "message"
  ],
  "engines": {
    "node": ">=18"
  }
}
