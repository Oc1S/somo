{
  "name": "repo-root",
  "private": true,
  "scripts": {
    "build": "turbo build",
    "dev": "turbo dev --filter=somoto --filter=somo --filter=somo-dev --filter=somo-shared",
    "dev:doc": "turbo dev --filter=somoto --filter=somo --filter=docs --filter=somo-shared",
    "lint": "turbo lint",
    "type-check": "turbo type-check",
    "clean": "turbo clean",
    "format": "prettier --write \"**/*.{ts,tsx,md}\""
  },
  "devDependencies": {
    "concurrently": "^8.2.2",
    "eslint": "^8.57.0",
    "postcss": "^8.4.47",
    "prettier": "^3.2.5",
    "prettier-plugin-tailwindcss": "^0.5.11",
    "turbo": "2.0.4"
  },
  "engines": {
    "node": ">=18"
  },
  "packageManager": "yarn@1.22.22",
  "workspaces": [
    "docs",
    "dev",
    "packages/*"
  ]
}
